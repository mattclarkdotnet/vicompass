<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
    tools:context="com.viscompass.visompass.MainActivity">

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="30dp"
        android:background="@drawable/bordered_button"
        android:text=" + "
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/btnMinus"
        app:layout_constraintEnd_toStartOf="@+id/btnMinus" />

    <TextView
        android:id="@+id/tvCorrection"
        android:layout_width="94dp"
        android:layout_height="92dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:text="---"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTarget"
        tools:textColor="#00ff00"
        tools:textSize="36sp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:theme="@style/Theme.AppCompat"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeading" />

    <TextView
        android:id="@+id/tvTarget"
        android:layout_width="123dp"
        android:layout_height="59dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Button
        android:id="@+id/btnStbd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="#000"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:text="Stbd"
        android:textColor="#00ff00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Button
        android:id="@+id/btnPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#000"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:text="Port"
        android:textColor="#ff0000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editText5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <TextView
        android:id="@+id/tvTolerance"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        tools:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Tolerance:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:width="40dp"
        android:height="40dp"
        android:background="@drawable/bordered_button"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:text="M"
        android:textColor="#0000ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvTolerance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:width="40dp"
        android:height="40dp"
        android:background="@drawable/bordered_button"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:text="Q"
        android:textColor="#0000ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvTolerance"
        app:layout_constraintStart_toEndOf="@+id/btnM" />

    <Button
        android:id="@+id/btnQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:width="40dp"
        android:height="40dp"
        android:background="@drawable/bordered_button"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:text="QQ"
        android:textColor="#0000ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvTolerance"
        app:layout_constraintStart_toEndOf="@+id/btnQ" />

    <Button
        android:id="@+id/btnS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:width="40dp"
        android:height="40dp"
        android:background="@drawable/bordered_button"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:text="S"
        android:textColor="#0000ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvTolerance"
        app:layout_constraintEnd_toStartOf="@+id/btnM" />

    <Button
        android:id="@+id/btnSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:width="40dp"
        android:height="40dp"
        android:background="@drawable/bordered_button"
        android:maxWidth="40dp"
        android:minHeight="40dp"
        android:text="SS"
        android:textColor="#0000ff"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvTolerance"
        app:layout_constraintEnd_toStartOf="@+id/btnS" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:width="30dp"
        android:background="@drawable/bordered_button"
        android:text=" - "
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTolerance"
        app:layout_constraintStart_toEndOf="@+id/tvTolerance" />

    <TextView
        android:id="@+id/tvPortArrow"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:gravity="top"
        android:padding="0dp"
        android:text="&lt;"
        android:textColor="#ff0000"
        android:textSize="120sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tvCorrection"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStbdArrow"
        android:layout_width="wrap_content"
        android:layout_height="122dp"
        android:layout_margin="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="top"
        android:padding="0dp"
        android:text="&gt;"
        android:textColor="#00ff00"
        android:textSize="120sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tvCorrection"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageViewDrum"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:onClick="imgViewDrumOnClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/side_drum_icon_27836" />

</androidx.constraintlayout.widget.ConstraintLayout>
